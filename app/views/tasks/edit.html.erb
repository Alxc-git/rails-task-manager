
<div class="container">
  <div class="padding-btm-top">
    <h1>Edit your page</h1>
  </div>

  <%= form_with model: @task do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :details %>
    <%= f.text_field :details %>
    <%= f.label "Completed" %>
    <%= f.check_box :completed %>
    <%= f.submit %>
  <% end %>
  <div class="padding-btm-top">
    <%= link_to 'Back to list', tasks_path, class: "btn btn-outline-primary"%>
  </div>
</div>
