<div class="container">
  <h1>Welcome to my index page! </h1>

  <p>Here is a list of tasks:</p>

  <ul>
    <% @tasks.each do |task| %>
      <li>
        <input type="checkbox">

        <%= link_to task.title, task_path(task) %>

        <%= link_to "🗑️",
            task_path(task),
            data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'} %>
        </li>
    <% end %>
  </ul>
  <%= link_to '➕ Add a new task', new_task_path, class: "btn btn-outline-primary" %>

</div>
